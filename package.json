{
  "name": "resume.json",
  "version": "1.0.0",
  "description": "My JSON Resume",
  "license": "MIT",
  "repository": "alebelcor/resume.json",
  "author": {
    "name": "Alejandro BeltrÃ¡n",
    "email": "alebelcor@gmail.com",
    "url": "https://github.com/alebelcor"
  },
  "private": true,
  "main": "resume.json",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:post",
    "build:main": "resume export \"docs/index\" --theme=stackoverflow --format=html",
    "build:post": "sed -i 's/<head>/<head>\\n  <meta name=\"robots\" content=\"noindex,nofollow\">/g' docs/index.html",
    "postinstall": "sed -i 's/{{name}}$/{{{name}}}/' node_modules/jsonresume-theme-stackoverflow/theme/partials/references.hbs",
    "test:lint": "jsonlint resume.json --quiet",
    "test:validate": "resume test",
    "test:spellcheck": "yaspeller-ci resume.json",
    "test": "npm run test:lint && npm run test:validate"
  },
  "devDependencies": {
    "jsonlint": "^1.6.3",
    "jsonresume-theme-stackoverflow": "^1.4.0",
    "resume-cli": "^1.2.7",
    "yaspeller-ci": "^1.0.1"
  }
}
